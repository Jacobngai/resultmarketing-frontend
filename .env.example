# ResultMarketing PWA - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

REACT_APP_SUPABASE_URL=https://your-project-id.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your-supabase-anon-key

# ===========================================
# API ENDPOINTS
# ===========================================
# Backend API URL (Railway deployment)
# Local development: http://localhost:3001/api
REACT_APP_API_URL=https://your-api.railway.app/api

# AI Service URL (Python FastAPI on Railway)
# Local development: http://localhost:8000/api
REACT_APP_AI_API_URL=https://your-ai-service.railway.app/api

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Get these from Stripe Dashboard
# https://dashboard.stripe.com/apikeys

REACT_APP_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# ===========================================
# ONESIGNAL PUSH NOTIFICATIONS
# ===========================================
# Get these from OneSignal Dashboard
# https://onesignal.com/

REACT_APP_ONESIGNAL_APP_ID=your-onesignal-app-id

# ===========================================
# GOOGLE SERVICES
# ===========================================
# Google Vision API for OCR (only needed if using client-side)
# Typically handled by backend

REACT_APP_GOOGLE_VISION_API_KEY=your-google-vision-api-key

# ===========================================
# ANALYTICS (Optional)
# ===========================================
# Google Analytics
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry for error tracking
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ===========================================
# APP CONFIGURATION
# ===========================================
# Environment
REACT_APP_ENV=development

# App version (auto-set by CI/CD typically)
REACT_APP_VERSION=1.0.0

# Feature flags
REACT_APP_ENABLE_DEMO_MODE=true
REACT_APP_ENABLE_VOICE_INPUT=true
REACT_APP_ENABLE_ANALYTICS=false

# ===========================================
# DEVELOPMENT ONLY
# ===========================================
# Enable React Query devtools
REACT_APP_ENABLE_DEVTOOLS=true

# Mock API responses
REACT_APP_USE_MOCK_API=false
